  <script>
    function getSignal() {
      const spinner = document.getElementById("spinner");
      const status = document.getElementById("status");
      const signalOutput = document.getElementById("signalOutput");

      spinner.style.display = "block";
      status.style.display = "block";
      signalOutput.style.display = "none";
      signalOutput.textContent = "";

      // Simulated analysis delay
      setTimeout(() => {
        spinner.style.display = "none";
        status.style.display = "none";

        // Simulated signal logic using price trend idea
        const priceNow = 100 + Math.random() * 10;
        const pricePrev = 100 + Math.random() * 10;

        let signal = "";
        if (priceNow > pricePrev + 0.5) {
          signal = "BUY";
        } else if (priceNow < pricePrev - 0.5) {
          signal = "SELL";
        } else {
          signal = Math.random() > 0.5 ? "BUY" : "SELL";
        }

        signalOutput.textContent = `Signal: ${signal}`;
        signalOutput.style.color = signal === "BUY" ? "#00ff00" : "#ff4444";
        signalOutput.style.display = "block";
      }, 2500);
    }
  </script>

